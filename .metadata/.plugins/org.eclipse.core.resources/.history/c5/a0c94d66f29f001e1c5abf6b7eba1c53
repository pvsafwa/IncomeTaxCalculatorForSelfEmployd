package com;

public class CalculateSlab5Tax {

	
	
	if (annualSalary > 1500000 && annualSalary <= 5000000)
	{
	System.out.println("Congratulatons! You comes under tax Slab-5");
	float slab5Tax = 15000 + 30000 + 45000 + 60000 +((TaxCalC.annualSalary - 1500000) * 30/100);
	System.out.println("Your annual tax is " +slab5Tax);
	float slab5Cess = slab5Tax*4/100;
	System.out.println("Your annual heath and education cess is " +slab5Cess);
	float slab5Total = slab5Tax + slab5Cess;
	System.out.println("The final tax liability for the year is " +slab5Total);
	}
	
	else if (annualSalary > 5000000 && annualSalary < 10000000)
	{
	System.out.println("Congratulatons! You comes under tax Slab-5");
	float slab5Tax = 15000 + 30000 + 45000 + 60000 +((annualSalary - 1500000) * 30/100);
	System.out.println("Your annual tax is " +slab5Tax);
	float slab5Cess = slab5Tax*4/100;
	System.out.println("Your annual heath and education cess is " +slab5Cess);
	System.out.println("Since your annual salary is more than 50 lakhs, you  have to pay a surchargeof 10% of the tax.");
	float surCharge1 = slab5Tax *(10/100);
	System.out.println("Your surcharge payable is " +surCharge1);
	float slab5Total = slab5Tax + slab5Cess + surCharge1;
	System.out.println("The final tax liability for the year is " +slab5Total);
	}
	
	else if (annualSalary > 10000000)
	{
	System.out.println("Congratulatons! You comes under tax Slab-5");
	float slab5Tax = 15000 + 30000 + 45000 + 60000 +((annualSalary - 1500000) * 30/100);
	System.out.println("Your annual tax is " +slab5Tax);
	float slab5Cess = slab5Tax*4/100;
	System.out.println("Your annual heath and education cess is " +slab5Cess);
	System.out.println("Since your annual salary is more than 1 Crore, you  have to pay a surchargeof 15% of the tax.");
	float surCharge1 = 15/100*slab5Tax;
	System.out.println("Your surcharge payable is " +surCharge1);
	float slab5Total = slab5Tax + slab5Cess + surCharge1;
	System.out.println("The final tax liability for the year is " +slab5Total);
	}
}
